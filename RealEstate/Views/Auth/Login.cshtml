@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login | RealEstate</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f5f7fa;
        }

        .login-container {
            max-width: 400px;
            margin: auto;
        }

        .card {
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);
        }

        .logo-img {
            width: 80px;
            margin: 0 auto 1rem auto;
        }
    </style>
</head>

<body>
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="login-container">
            <div class="card p-4">
                <div class="text-center">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcScJ3JQwUChiuvG5lSVAHbILKpS6wmm7uC1Uw&s" class="logo-img" alt="Logo">
                    <h4 class="mt-2 mb-4">RealEstate Login</h4>
                </div>

                @if (!string.IsNullOrEmpty(ViewBag.ErMsg))
                {
                    <div class="alert alert-danger text-center">@ViewBag.ErMsg</div>
                }

                <form asp-controller="Auth" asp-action="Login" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="text" class="form-control" id="email" name="email" placeholder="Enter email" required>
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">Sign In</button>
                    </div>
                </form>

                <div class="text-center">
                    Don't have an Account
                </div>
                <div class="text-center">
                    <a class="text-decoration-none" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
